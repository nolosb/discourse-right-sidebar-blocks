<h3 class="top-contributors__heading">
  {{theme-i18n "top_contributors.heading"}}
</h3>

<div class="top-contributors__container">
  {{#each topContributors as |item|}}
    <div class="top-contributors__user">
      <span
        data-user-card={{item.user.username}}
        class="top-contributors__user-badge"
      >
        {{avatar item.user imageSize="small"}}
        {{#if siteSettings.prioritize_username_in_ux}}
          {{item.user.username}}
        {{else if item.user.name}}
          {{item.user.name}}
        {{else}}
          {{item.user.username}}
        {{/if}}
      </span>
      <span class={{concat "top-contributors__user-likes order--" this.order}}>
        {{#if (eq this.order "likes_received")}}

          {{item.likes_received}}
          {{d-icon "heart"}}
        {{else}}

          {{item.likes_given}}
          {{d-icon "heart"}}
        {{/if}}
      </span>
    </div>
  {{/each}}
</div>

<a class="top-contributors__view-all" href={{this.viewAllUrl}}>
  {{theme-i18n "top_contributors.view_all"}}
</a>